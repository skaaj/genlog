<Window x:Class="Genlog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="INSERT AN AWESOME TITLE HERE" Width="800" Height="600" Loaded="WindowLoaded">

    <Grid>

        <Grid.DataContext>
            <XmlDataProvider Source="Data/SampleData.xml" XPath="/Users/User" />
        </Grid.DataContext>

        <Menu IsMainMenu="True" Grid.Row="0" Margin="0,3,0,0" VerticalAlignment="Top" Height="22" Background="#FFF9F9F9" Padding="10,0,0,0">
            <MenuItem Header="_Accueil" Click="OnClickHome" />
            <MenuItem Header="Test de _mémoire associative" Click="OnClickMemoryTest" />
            <MenuItem Header="Test de _concentration" Click="OnClickFocusTest" />
            <MenuItem Header="_Statistiques" Click="OnClickStats"/>
            <MenuItem Header="A_ide" Click="OnClickHelp"/>
        </Menu>
        <UserControl Grid.Row="1" x:Name="contentArea" Margin="0,25,0,0" BorderBrush="#FFB9B9B9" BorderThickness="0,2,0,0">
            <UserControl.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFF1F1F1" Offset="0"/>
                    <GradientStop Color="White" Offset="0.037"/>
                </LinearGradientBrush>
            </UserControl.Background>
        </UserControl>
    </Grid>
</Window>
